<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.hotelapp.controller.customer.RoomDetailController" style="-fx-padding: 20;">
    <!-- Gambar besar kamar -->
    <ImageView fx:id="roomImage" fitWidth="300" fitHeight="200" />

    <!-- Informasi kamar -->
    <Label fx:id="roomNumberLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Nomor Kamar:" />
    <Label fx:id="roomTypeLabel" style="-fx-font-size: 16px;" text="Tipe: " />
    <Label fx:id="priceLabel" style="-fx-font-size: 16px;" text="Harga: " />
    <Label fx:id="roomDescLabel" style="-fx-font-size: 14px;" text="Deskripsi:" wrapText="true" />

    <!-- Tombol booking dan tutup -->
    <Button fx:id="bookingButton" text="Pesan Kamar" style="-fx-background-color: #28a745; -fx-text-fill: white;" onAction="#onBookingButtonAction" />
    <Button fx:id="closeButton" text="Tutup" onAction="#closeWindow" />
</VBox>