<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.hotelapp.controller.customer.BookingController" spacing="15" alignment="CENTER">
    <Label text="Form Pemesanan" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <Label text="Tanggal Check-in:" />
    <DatePicker fx:id="checkInPicker" />
    <Label text="Tanggal Check-out:" />
    <DatePicker fx:id="checkOutPicker" />
    <Label text="Metode Pembayaran:" />
    <ComboBox fx:id="paymentMethodComboBox">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="online" />
            </FXCollections>
        </items>
    </ComboBox>
    <Button fx:id="confirmBookingButton" text="Konfirmasi Pemesanan" style="-fx-background-color: #28a745; -fx-text-fill: white;" />
</VBox>