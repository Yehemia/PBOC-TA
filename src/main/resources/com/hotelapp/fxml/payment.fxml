<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.hotelapp.controller.PaymentController" spacing="15" alignment="CENTER">
    <Label text="Pembayaran Online" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <Label fx:id="totalPriceLabel" text="Total: Rp0" />
    <Label text="Scan QR Code untuk membayar:" />

    <!-- QR Code -->
    <ImageView fx:id="qrImageView" fitWidth="200" fitHeight="200"/>

    <!-- Tombol Konfirmasi -->
    <Button fx:id="confirmPaymentButton" text="Konfirmasi Pembayaran" style="-fx-background-color: #28a745; -fx-text-fill: white;" />
</VBox>