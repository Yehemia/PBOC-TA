<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.hotelapp.controller.resepsionis.HistoryController">
    <!-- Judul dan Filter -->
    <VBox spacing="10" layoutX="20" layoutY="10">
        <Label text="Riwayat Reservasi Tamu" style="-fx-font-size: 18px;"/>
        <HBox spacing="10">
            <TextField fx:id="searchField" promptText="Cari nama tamu atau ID reservasi"/>
            <Button text="Cari" onAction="#performSearch"/>
            <Button text="Refresh" onAction="#refreshData"/>
        </HBox>
    </VBox>

    <!-- TableView Riwayat -->
    <TableView fx:id="historyTable" layoutX="20" layoutY="80" prefWidth="760" prefHeight="400">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="nameColumn" text="Nama Tamu" prefWidth="150"/>
            <TableColumn fx:id="roomColumn" text="Nomor Kamar" prefWidth="100"/>
            <TableColumn fx:id="reservationDateColumn" text="Tanggal Reservasi" prefWidth="120"/>
            <TableColumn fx:id="checkInColumn" text="Waktu Check-In" prefWidth="120"/>
            <TableColumn fx:id="checkOutColumn" text="Waktu Check-Out" prefWidth="120"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
        </columns>
    </TableView>
</AnchorPane>