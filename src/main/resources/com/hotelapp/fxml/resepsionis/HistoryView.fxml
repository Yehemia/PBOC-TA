<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="15.0" stylesheets="@../../styles/receptionist-style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotelapp.controller.resepsionis.HistoryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="page-title" text="Riwayat Transaksi" />

        <VBox styleClass="content-card" VBox.vgrow="ALWAYS">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <HBox styleClass="search-box" HBox.hgrow="ALWAYS">
                            <children>
                                <FontIcon iconLiteral="fas-search"  />
                                <TextField fx:id="searchField" prefHeight="40.0" promptText="Cari berdasarkan ID Reservasi atau Nama..." HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefresh" styleClass="button-secondary" text="Refresh" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </HBox>

                <TableView fx:id="historyTable" styleClass="table-view-light" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID Booking" />
                        <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Nama Tamu" />
                        <TableColumn fx:id="roomColumn" prefWidth="100.0" text="ID Kamar" />
                        <TableColumn fx:id="checkInColumn" prefWidth="150.0" text="Waktu Check-In" />
                        <TableColumn fx:id="checkOutColumn" prefWidth="150.0" text="Waktu Check-Out" />
                        <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</VBox>